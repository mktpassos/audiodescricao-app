import React, { useState } from "react";

export default function App() {
  const [imageUrl, setImageUrl] = useState(
    "https://images.unsplash.com/photo-1503023345310-bd7c1de61c7d" // valor de exemplo
  );
  const [loading, setLoading] = useState(false);
  const [result, setResult] = useState(null);
  const [error, setError] = useState(null);

  async function handleDescribe(e) {
    e.preventDefault();
    setLoading(true);
    setError(null);
    setResult(null);

    try {
      const res = await fetch("/api/descrever-imagem", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ imageUrl }),
      });

      if (!res.ok) {
        throw new Error(`${res.status} ${res.statusText}`);
      }

      const data = await res.json();
      setResult(data);
    } catch (err) {
      setError(err.message);
    } finally {
      setLoading(false);
    }
  }

  return (
    <div
      style={{
        minHeight: "100vh",
        display: "grid",
        placeItems: "center",
        padding: 24,
        fontFamily: "system-ui, -apple-system, Segoe UI, Roboto, sans-serif",
      }}
    >
      <div style={{ width: "100%", maxWidth: 680 }}>
        <h1 style={{ textAlign: "center", marginBottom: 16 }}>
          App Audiodescrição — Web
        </h1>

        <form
          onSubmit={handleDescribe}
          style={{ display: "grid", gap: 12, marginBottom: 16 }}
        >
          <label style={{ display: "grid", gap: 6 }}>
            <span style={{ fontSize: 14, opacity: 0.8 }}>URL da imagem</span>
            <input
              type="url"
              required
              value={imageUrl}
              onChange={(e) => setImageUrl(e.target.value)}
              placeholder="https://exemplo.com/sua-imagem.jpg"
              style={{
                padding: "12px 14px",
                borderRadius: 8,
                border: "1px solid #ddd",
                fontSize: 16,
              }}
            />
          </label>

          <button
            type="submit"
            disabled={loading}
            style={{
              padding: "12px 16px",
              border: 0,
              borderRadius: 8,
              background: "#111827",
              color: "white",
              fontWeight: 600,
              cursor: loading ? "wait" : "pointer",
            }}
          >
            {loading ? "Descrvendo..." : "Descrever imagem"}
          </button>
        </form>

        {imageUrl && (
          <img
            src={imageUrl}
            alt=""
            style={{
              width: "100%",
              maxHeight: 360,
              objectFit: "cover",
              borderRadius: 12,
              marginBottom: 16,
              border: "1px solid #eee",
            }}
          />
        )}

        {error && (
          <p style={{ color: "crimson", fontWeight: 600 }}>
            Erro: {String(error)}
          </p>
        )}

        {result && (
          <pre
            style={{
              background: "#0b1220",
              color: "#e5e7eb",
              padding: 16,
              borderRadius: 12,
              whiteSpace: "pre-wrap",
              wordBreak: "break-word",
            }}
          >
{JSON.stringify(result, null, 2)}
          </pre>
        )}
      </div>
    </div>
  );
}
